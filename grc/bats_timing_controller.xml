<?xml version="1.0"?>
<block>
	<name>Timing Controller</name>
	<key>bats_timing_controller</key>
	<category>Bats</category>
	<import>import bats</import>
	<make>bats.timing_controller($cycle_dur, $slot_dur, $startup_dur)</make>

	<param>
		<name>Cycle Duration</name>
		<key>cycle_dur</key>
		<type>double</type>
	</param>
	
	<param>
		<name>Slot Duration</name>
		<key>slot_dur</key>
		<type>double</type>
	</param>

	<param>
		<name>Startup Duration</name>
		<key>startup_dur</key>
		<type>double</type>
	</param>

	<sink>
		<name>in</name>
		<type>complex</type>
	</sink>

	<source>
		<name>out</name>
		<type>complex</type>
	</source>
</block>
