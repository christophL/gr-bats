<?xml version="1.0"?>
<block>
	<name>Timing Controller</name>
	<key>bats_timing_controller</key>
	<category>bats</category>
	<import>import bats</import>
	<make>bats.timing_controller($cycle_dur, $slot_dur)</make>

	<param>
		<name>Cycle Duration</name>
		<key>cycle_dur</key>
		<type>double</type>
	</param>
	
	<param>
		<name>Slot Duration</name>
		<key>slot_dur</key>
		<type>double</type>
	</param>

	<sink>
		<name>fromUSRP</name>
		<type>complex</type>
	</sink>

	<sink>
		<name>fromEnc</name>
		<type>complex</type>
	</sink>


	<source>
		<name>toUSRP</name>
		<type>complex</type>
	</source>

	<source>
		<name>toDec</name>
		<type>complex</type>
	</source>
</block>
